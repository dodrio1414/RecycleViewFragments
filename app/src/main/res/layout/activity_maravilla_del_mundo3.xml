<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".maravillaDelMundo3">

    <TextView
        android:id="@+id/txt_maravillas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="Maravillas del Mundo"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#00BCD4"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />
    <TextView
        android:id="@+id/txt_maravillasNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="Estatua Cristo Redentor"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#00BCD4"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_maravillas"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/img_maravillas"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_maravillasNombre"
        android:src="@drawable/cristoredentor"
        tools:layout_editor_absoluteX="13dp" />

    <ScrollView
        android:layout_width="414dp"
        android:layout_height="451dp"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_maravillas">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_maravillasInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:text="La obra Cristo Redentor está concebida como una escultura monumental de estilo art déco. Este fue un estilo artístico internacional ecléctico surgido en el período de entreguerras, es decir, entre 1920 y 1939 aproximadamente, si bien no tuvo nombre hasta la década de 1960. Ejerció gran influencia en las bellas artes, pero especialmente en la arquitectura y las artes aplicadas.

Como tendencia, el art déco se caracterizaba por el refinamiento elegante y sensual; el lenguaje eclecticista e historicista; el empleo de la línea recta; el uso del zig-zag y elementos geométricos, en particular el hexágono, el octágono y el cuadrado. Eventualmente se aplicaban curvas y espirales, siempre que estuvieran sometidas al sentido geométrico y no a la asociación con las formas de la naturaleza."
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#4CAF50"
                android:layout_marginTop="15dp"
                />



        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>